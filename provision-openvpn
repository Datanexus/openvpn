#
# main routine for provisioning openvpn
---
- name: OPENVPN OVERLAY | gathering {{ cloud }} inventory
  tags:
    - openvpn
  hosts: localhost
  connection: local
  vars_files:
    - vars/openvpn.yml
  gather_facts: yes
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined
    
    - block:
      - include_role:
             name: aws
             tasks_from: discover-vpc
    
      - include_role:
          name: aws
          tasks_from: discover-vm
      when: cloud == 'aws'
      
    - include_role:
        name: azure
        tasks_from: discover-vm
      when: cloud == 'azure'

- name: POSTGRESQL OVERLAY | applying {{ cloud }} security rules
  tags:
    - openvpn
  hosts: localhost
  connection: local
  gather_facts: no
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined

    - block:
      - include_role:
          name: aws
          tasks_from: create-securitygroup
      
      - include_role:
          name: aws
          tasks_from: apply-securitygroup
      when: cloud == 'aws'

    - include_role:
        name: azure
        tasks_from: apply-securitygroup
      when: cloud == 'azure'
      
- name: OPENVPN OVERLAY | installing base openvpn application
  tags:
    - openvpn
  hosts: "{{ application }}"
  vars_files:
    - vars/openvpn.yml
  gather_facts: yes
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined

    # would change this for making every jumphost an openvpn server
    - include_role:
        name: openvpn
      run_once: true
        
