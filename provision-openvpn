#!/usr/bin/env ansible-playbook
# (c) 2016 DataNexus Inc.  All Rights Reserved.
#
# main routine for provisioning openvpn
---
- name: OPENVPN OVERLAY | gathering {{ cloud }} inventory
  tags:
    - openvpn
  hosts: localhost
  connection: local
  vars_files:
    - vars/openvpn.yml
  gather_facts: yes
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined
    
    - block:
      - include_role:
             name: aws
             tasks_from: discover-vpc
    
      - include_role:
          name: aws
          tasks_from: discover-vm
      when: cloud == 'aws'
    
    - block:
      - include_role:
          name: azure
          tasks_from: discover-resourcegroup
      
      - include_role:
          name: azure
          tasks_from: discover-vm
      when: cloud == 'azure'

- name: OPENVPN OVERLAY | applying {{ cloud }} security rules
  tags:
    - openvpn
  hosts: localhost
  connection: local
  gather_facts: no
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined

    - block:
      - include_role:
          name: aws
          tasks_from: modify-existing-securitygroup
        vars:
          block: '0.0.0.0/0'

      - include_role:
          name: aws
          tasks_from: apply-securitygroup
      when: cloud == 'aws'

    - include_role:
        name: azure
        tasks_from: apply-securitygroup
      when: cloud == 'azure'
      
- name: OPENVPN OVERLAY | installing base openvpn application
  tags:
    - openvpn
  hosts: "{{ application }}"
  vars_files:
    - vars/openvpn.yml
  gather_facts: yes
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined
      
    # would change this for making every jumphost an openvpn server
    - include_role:
        name: openvpn
      run_once: true
      
- name: OPENVPN OVERLAY | reconfiguring ssh for platform access via vpn
  tags:
    - openvpn
  hosts: localhost
  connection: local
  vars_files:
    - vars/openvpn.yml
  gather_facts: yes
  tasks:
    - include_vars: "{{ configuration }}"
      when: configuration is defined
    
    - block:
      - include_role:
          name: aws
          tasks_from: discover-vpc
        
      - include_role:
          name: aws
          tasks_from: modify-existing-securitygroup
        vars:
          block: "{{ external_subnet }}"
      when: cloud == 'aws'
    
    - block:
      - include_role:
          name: azure
          tasks_from: discover-resourcegroup
        
      - include_role:
          name: azure
          tasks_from: modify-existing-securitygroup
      when: cloud == 'azure'
      
    - name: OPENVPN ENCRYPTION OVERLAY | reconfiguring ssh for platform access via vpn
      lineinfile:
        dest: "{{ item }}"
        regexp: "    Hostname {{ groups['openvpn'].0 }}"
        line: "    Hostname {{ groups['openvpn_private'].0 }}"
        state: "{{ item.state | default('present') }}"
      with_items:
        - "{{ ansible_env.HOME }}/.ssh/config"
